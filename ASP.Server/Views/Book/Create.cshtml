@using ASP.Server.Controllers
@using ASP.Server.ViewModels
@model CreateBookViewModel
@{
    ViewData["Title"] = "Add a Book";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        height: 100vh;
    }

    .container{
        display:flex;
        justify-content: center;
    }

    form {
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        border-radius: 8px;
        width: 400px;
    }

    label {
        margin-bottom: 8px;
        font-weight: bold;
        display: block;
    }

    input, textarea, select {
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        width: 100%;
    }

        input[type="submit"] {
            background-color: #4caf50;
            color: #fff;
            border: none;
            padding: 10px;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #45a049;
            }
</style>

<form asp-controller="Book" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name">Book Name</label>
        <input asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="Author">Author</label>
        <input asp-for="Author" />
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" />
    </div>

    <div class="form-group">
        <label asp-for="Content">Content</label>
        <textarea asp-for="Content"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Genres">Select Genres</label>
        <select asp-for="Genres" asp-items="@(new SelectList(Model.AllGenres, "Id", "Name"))" multiple class="form-control"></select>
    </div>

    <input type="submit" value="Add" class="btn btn-primary" />
</form>
